<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
		controllerName="zemptable.EmpList" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Employee List">
		<content>
	         <Table items="{/}">
	            <columns>
	                <Column>
	                   <header>
	                       <Text text="{m2>name}"/>
	                   </header>
	                </Column>
	                <Column>	                  
	                       <Text text="{m2>role}"/>
	                </Column>
	                <Column>
	                   <Text text="{m2>dept}"/>
	                </Column>	                
	            </columns>
	            <items>
	                <ColumnListItem>
	                    <cells>
	                       <Text text="{name}"/>
	                       <Text text="{role}"/>
	                       <Text text="{dept}"/>
	                    </cells>
	                </ColumnListItem>   
	            </items>
	         </Table>
		</content>
	</Page>
</core:View>